  <style>
    @import url('https://fonts.googleapis.com/css2?family=Montserrat&family=Roboto&display=swap');

    /* Scrollbar style for browsers that support it */
    ::-webkit-scrollbar {
      width: 10px;
    }

    ::-webkit-scrollbar-track {
      background: #f1f1f1; 
    }
    
    ::-webkit-scrollbar-thumb {
      background: #888; 
    }
    
    ::-webkit-scrollbar-thumb:hover {
      background: #555; 
    }

    /* Site */

    html, body {
      margin: 0;
      padding: 0;
      font-family: 'Roboto', sans-serif;
      color: white;
      overflow-x: hidden;
      scroll-behavior: smooth;
    }

    a, 
    a:hover, 
    a:visited, 
    a:active,
    a:focus {
      color: inherit;
      text-decoration: none;
    }

    .spaced-word {
      letter-spacing: 1.5rem;
    }

    .darkening-layer {
      position: absolute;
      top: 0;
      left: 0;
      height: 100%;
      width: 100%;
      background-color: #0008;
      background-repeat: repeat;
    }

    .header-font {
      font-family: 'Montserrat', sans-serif;
    }

    .btn-back-to-top {
      position: fixed;
      background-color: #222;
      border: 1px solid #eee;
      padding: 5px;
      color: #eee;
      right: 50px;
      bottom: 50px;
      border-radius: 50%;
      opacity: 0;
      transition-duration: 0.5s;
      z-index: 5;
    }

    .btn-back-to-top.scrolled {
      opacity: 0.75;
    }

    /* Mobile Menu */

    .mobile-menu {
      position: fixed;
      background-color: #333;
      height: 100vh;
      width: 270px;
      top: 0;
      right: -280px;
      box-shadow: -2px 0 5px #000d;
      z-index: 6;
      transition-duration: 0.5s;
    }

    .mobile-menu.opened {
      right: 0;
    }

    .mobile-menu__close-button {
      padding: 20px;
      cursor: pointer;
    }

    .mobile_menu__list-item {
      font-size: 2rem;
    }

    .mobile_menu__list-item:hover {
      background: linear-gradient(to right, #555, transparent 85%);
    }

    .mobile_menu__list-item:after {
      display: block;
      content: " ";
      height: 2px;
      background: linear-gradient(to right, black, transparent 85%);
    }

    .mobile_menu__list-item div {
      padding: 20px;
    }

    /* Header / Nav */

    header {
      position: absolute;
      width: 100vw;
      z-index: 5;
      transition-duration: 0.5s;
      background-color: #2220;
      box-shadow: 0 2px 5px #0000;
    }

    @media only screen and (max-width: 992px) {
      header {
        position: fixed;
      }

      header.scrolled {
        background-color: #222f;
        box-shadow: 0 2px 5px #000d;
      }
    }

    nav {
      display: flex;
      align-items: center;
    }

    .nav__ul {
      margin-bottom: 0;
      display: flex;
      justify-content: flex-end;
      align-items: center;
    }

    .nav__link {
      display: inline-block;
      padding: 20px;
      width: 150px;
      cursor: pointer;
      border-bottom: 2px solid transparent;
      text-align: center;
    }

    .nav__link:hover {
      border-bottom: 2px solid white;
    }

    .nav__logo {
      font-weight: bold;
    }

    .nav__mobile-menu-button {
      padding: 20px;
    }

    /* Landing */

    .landing {
      position: relative;
      width: 100%;
      height: 70vh;
      overflow: hidden;
      box-shadow: 0 2px 5px #000d;
      z-index: 1;
    }

    .landing__video {
      position: absolute;
      top: 50%;
      left: 50%;
      height: 100%;
      width: 100%;
      transform: translate(-50%, -50%);
      object-fit: cover;
    }

    .landing__splash {
      position: absolute;
      top: 50%;
      left: 50%;
      transform: translate(-50%, -50%);
    }

    .rolodex {
      position: relative;
      margin: 0 auto;
      width: 800px;
      height: 100px;
      border: 3px solid white;
      overflow: hidden;
    }

    .rolodex__item {
      position: absolute;
      top: 100%;
      display: flex;
      height: 100%;
      width: 100%;
      text-align: center;
      font-size: 4rem;
      letter-spacing: 2rem;
      text-transform: uppercase;
      align-items: center;
      justify-content: center;
    }

    /* Start first element in view */
    .rolodex__item:first-child {
      top: 0;
      transition-duration: 1s; /*This will need to be synced with the rolodex JS value */
    }

    .landing__call-to-action {
      margin: 0 auto;
      margin-top: 50px;
      display: flex;
      justify-content: center;
    }

    .landing__button {
      display: flex;
      justify-content: center;
      align-items: center;
      margin: 2rem;
      height: 5rem;
      width: 275px;
      border: 1px solid white;
      color: white;
      font-size: 2rem;
      border-radius: 5px;
      cursor: pointer;
      user-select: none;
    }

    .landing__button:hover {
      background-color: white;
      color: black;
    }

    .landing__button--inverted {
      background-color: white;
      color: black;
    }

    .landing__button--inverted:hover {
      /* Use Bootstrap's .info color on hover */
      background-color: #33b5e5;
      border: 1px solid #33b5e5;
      color: white;
    }

    .landing__button--inverted:visited {
      color: black;
    }

    .landing__button--inverted:visited:hover {
      color: white;
    }

    @media only screen and (max-width: 992px) {
      .landing {        
        background-color: #000;
        background-image: url("images/sm7b_cropped.jpg");
        background-size: cover;
        background-position: center;
      }

      .rolodex{
        width: 600px;
        height: 200px;
      }
    }

    @media only screen and (max-width: 768px) {
      .landing__splash {
        position: relative;
        top: 0;
        left: 0;
        transform: inherit;
        height: 100%;
        display: flex;
        flex-direction: column;
        align-content: center;
        justify-content: center;
      }

      .rolodex{
        width: 90%;
        height: 100px;
      }

      .rolodex__item {
        font-size: 2.5rem;
      }

      .landing__call-to-action {
        width: 90%;
        display: block;
        text-align: center;
      }

      .landing__button {
        margin: 20px auto;
      }
    }

    @media only screen and (max-width: 500px) {
      .landing {
        height: 85vh;
      }

      .rolodex {
        height: 75px;
      }

      .rolodex__item {
        font-size: 1.5rem;
        letter-spacing: 1rem;
      }
    }

    /* About Us */

    .about-us {
      color: black;
    }

    .about-us__fixed-background {
