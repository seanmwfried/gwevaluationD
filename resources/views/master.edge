    .pricing__card {
      width: 300px;
      background-color: #eee;
      text-align: center;
      padding: 30px 15px;
      margin-bottom: 10px;
      border-radius: 20px;
    }

    .card__icon {
      padding-bottom: 20px;
    }

    .card__title {
      padding-top: 10px;
      font-size: 3rem;
      font-weight: bold;
    }

    .card__price {
      font-size: 2.25rem;
      font-style: italic;

    }
    .card__description {}

    @media only screen and (min-width: 768px) {
      .pricing__cards-container {
        max-width: 680px;
      }

      .pricing__card {
        margin: 20px;
      }
    }

    @media only screen and (min-width: 992px) {
      .pricing {
        background-image: url("images/computersetup.jpg");
